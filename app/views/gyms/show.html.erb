<div class="gym-details">
<h2>Gym Details:</h2>

<div class="gym_info">
  <h3>Name:</h3>
  <p><%= @gym.name %></p>
  <h3>Location:</h3>
  <p><%= @gym.location %></p>

  <h3>Description:</h3>
  <p><%= @gym.description %> </p>

  <h3>Price Range</h3>
  <p><%= @gym.price_range %></p>

  <%= link_to 'Reviews For This Gym', gym_reviews_path(@gym), :class => "button primary" %>

</div>



<% if user_signed_in? %>

    <%= link_to 'Review this gym', new_gym_review_path(@gym), :class => "button success" %>
    <%= link_to "Update This Gym", edit_gym_path(@gym), :class => "button success" %>
    <%= link_to "Delete This Gym", @gym, :method => :delete, :class => "button alert" %>
<% end %>

</div>
