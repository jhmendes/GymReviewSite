<h1>Enter in a gym's information below:</h1>

<%= simple_form_for @gym do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :location, label: 'Location' %>
  <%= f.input :description, label: 'Description' %>
  <%= f.input :price_range, label: 'Price Range', collection: ["$", "$$", "$$$"], as: :select %>
  <%= f.button :submit, 'Submit'%>
<% end %>
